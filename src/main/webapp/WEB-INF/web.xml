    </servlet>
    <servlet>
        <servlet-name>updateQuestion</servlet-name>
        <servlet-class>com.mycompany.podchody.updateQuestion</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateTest</servlet-name>
        <servlet-class>com.mycompany.podchody.updateTest</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateGame</servlet-name>
        <servlet-class>com.mycompany.podchody.updateGame</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>newGame</servlet-name>
        <servlet-class>com.mycompany.podchody.newGame</servlet-class>
