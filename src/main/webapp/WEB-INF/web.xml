        <servlet-name>updateTest</servlet-name>
        <url-pattern>/updateTest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateGame</servlet-name>
        <url-pattern>/updateGame</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>newGame</servlet-name>
        <url-pattern>/newGame</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
