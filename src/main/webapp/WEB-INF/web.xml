    <servlet-mapping>
        <servlet-name>newTest</servlet-name>
        <url-pattern>/newTest</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>newQuestion</servlet-name>
        <url-pattern>/newQuestion</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>removeField</servlet-name>
        <url-pattern>/removeField</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateQuestion</servlet-name>
        <url-pattern>/updateQuestion</url-pattern>
    </servlet-mapping>
